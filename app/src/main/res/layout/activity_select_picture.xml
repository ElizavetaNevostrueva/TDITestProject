<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SelectPictureActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/selectedPicView"
        android:layout_above="@+id/secondPicBtn"
        android:layout_centerInParent="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/first_picture_btn_name"
        android:id="@+id/firstPicBtn"
        android:layout_alignBaseline="@+id/secondPicBtn"
        android:layout_toLeftOf="@+id/secondPicBtn"
        android:onClick="selectPicture" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/second_picture_btn_name"
        android:id="@+id/secondPicBtn"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:onClick="selectPicture" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/third_picture_btn_name"
        android:id="@+id/thirdPicBtn"
        android:layout_toRightOf="@+id/secondPicBtn"
        android:layout_alignBaseline="@+id/secondPicBtn"
        android:onClick="selectPicture" />
</RelativeLayout>
